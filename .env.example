# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-southeast-1

# =============================================================================
# SQS Configuration
# =============================================================================
AWS_SQS_ASR_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/676267940025/oratorai-asr-queue
WAIT_TIME_SECONDS=20
MAX_MESSAGES=1
VISIBILITY_TIMEOUT=3600

# =============================================================================
# S3 Configuration
# =============================================================================
AWS_S3_BUCKET=amzn-s3-oratorai
AWS_S3_REGION=ap-southeast-1

# =============================================================================
# ASR (Whisper) Configuration
# =============================================================================
# ASR Engine: whisper (default)
ASR_ENGINE=whisper
# Model size: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL=base
WHISPER_LANGUAGE=vi
# Device: cpu, cuda (GPU recommended for 17x faster processing)
WHISPER_DEVICE=cuda
# Compute type: int8 (cpu), float16 (cuda), float32
WHISPER_COMPUTE_TYPE=float16
BEAM_SIZE=5
VAD_FILTER=true
# Enable speaker diarization
DIARIZATION_ENABLED=true

# =============================================================================
# Diarization (pyannote) Configuration
# =============================================================================
# Get token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here
# Model: pyannote/speaker-diarization-3.1
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
MIN_SPEAKERS=1
MAX_SPEAKERS=10
# Overlap threshold for merging transcript with speakers (0.0-1.0)
OVERLAP_THRESHOLD=0.5

# =============================================================================
# Webhook Configuration
# =============================================================================
NODE_API_URL=http://localhost:8080/api/v1/webhooks/asr-complete
WEBHOOK_SECRET=your_webhook_secret_here
# Webhook timeout in seconds (increased for large payloads)
WEBHOOK_TIMEOUT=120
# Processing timeout in seconds
PROCESSING_TIMEOUT=3600
MAX_RETRIES=3
RETRY_DELAY=5

# =============================================================================
# Audio Processing Configuration
# =============================================================================
# Maximum audio file size in MB
MAX_AUDIO_SIZE_MB=500
# Maximum audio duration in seconds (1 hour)
MAX_AUDIO_DURATION_SECONDS=3600
# Target sample rate for normalization
TARGET_SAMPLE_RATE=16000
# Minimum audio file size in KB
MIN_AUDIO_SIZE_KB=10

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_NAME=asr-worker-01
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Temporary directory for audio files
TEMP_DIR=/tmp/asr-worker
# Enable mock services for testing (true/false)
USE_MOCK_SERVICES=false

# =============================================================================
# Performance Tuning
# =============================================================================
# Number of threads for Whisper inference
NUM_WORKERS=4
# Download chunk size in bytes (8MB)
DOWNLOAD_CHUNK_SIZE=8388608
# Upload chunk size in bytes (8MB)
UPLOAD_CHUNK_SIZE=8388608
